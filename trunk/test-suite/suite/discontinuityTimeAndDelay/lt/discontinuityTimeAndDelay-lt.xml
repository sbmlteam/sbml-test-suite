<sbml xmlns="http://www.sbml.org/sbml/level1" level="1" version="2">
  <model name="discontinuityTimeAndDelay_lt">
    <listOfCompartments>
      <compartment name="c" volume="1"/>
    </listOfCompartments>
    <listOfSpecies>
      <species name="s1" compartment="c" initialAmount="10"/>
      <species name="s2" compartment="c" initialAmount="0"/>
      <species name="s3" compartment="c" initialAmount="10"/>
      <species name="s4" compartment="c" initialAmount="0"/>
    </listOfSpecies>
    <listOfReactions>
      <reaction name="r1">
        <listOfReactants>
          <speciesReference species="s1"/>
        </listOfReactants>
        <listOfProducts>
          <speciesReference species="s2"/>
        </listOfProducts>
        <kineticLaw formula="s1"/>
      </reaction>
      <reaction name="r2">
        <listOfReactants>
          <speciesReference species="s3"/>
        </listOfReactants>
        <listOfProducts>
          <speciesReference species="s4"/>
        </listOfProducts>
        <listOfModifiers>
          <modifierSpeciesReference species="s2"/>
        </listOfModifiers>
        <kineticLaw formula="piecewise(lt(s2, 4), 1.5, 0.05)"/>
      </reaction>
    </listOfReactions>
  </model>
</sbml>
